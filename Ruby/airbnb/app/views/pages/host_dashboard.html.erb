<h1>Host Dashboard</h1>

<!-- add user who booked a booking -->

<h3>My Bookings</h3>

<table class="table">
  <thead>
    <tr>
      <th>Start</th>
      <th>End</th>
      <th>Room</th>
      <th>Price</th>
      <th>Booking Time</th>
      <th>Guests #</th>
      <th>Approved?</th>
      <th>Update</th>
    </tr>
  </thead>
  <tbody>
		<% @rooms.each do |room| %>
			<% room.bookings.each do |booking| %>
				<tr>
	        <td><%= booking.start_date %></td>
	        <td><%= booking.end_date %></td>
	        <td><%= booking.room.title %></td>
	        <td><%= number_to_currency(booking.room.price) %></td>
	        <td><%= booking.created_at %></td>
	        <td><%= booking.guest_number %></td>
	        <td><%= yes_no(booking.approved) %></td>
	        <td><%= link_to 'Edit', edit_booking_path(booking) %></td>
	      </tr>
			<% end %>
		<% end %>
  </tbody>
</table>

<h3>My Rooms</h3>

<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Price</th>
      <th>Capacity</th>
      <th>Bathrooms</th>
      <th>Pets</th>
      <th>Smoking</th>
      <th>Wifi</th>
      <th>Bath</th>
      <th>Share</th>
      <th>Parties</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.title %></td>
        <td><%= room.price %></td>
        <td><%= room.capacity %></td>
        <td><%= room.bathrooms %></td>
        <td><%= room.pets %></td>
        <td><%= room.smoking %></td>
        <td><%= room.wifi %></td>
        <td><%= room.bath %></td>
        <td><%= room.share %></td>
        <td><%= room.parties %></td>
        <td><%= link_to 'Show', room %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>