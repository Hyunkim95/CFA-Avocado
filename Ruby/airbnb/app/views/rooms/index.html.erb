<p id="notice"><%= notice %></p>

<h1>Rooms</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th>Capacity</th>
      <th>Bathrooms</th>
      <th>User</th>
      <th>Pets</th>
      <th>Smoking</th>
      <th>Wifi</th>
      <th>Bath</th>
      <th>Share</th>
      <th>Parties</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.title %></td>
        <td><%= room.description %></td>
        <td><%= room.price %></td>
        <td><%= room.capacity %></td>
        <td><%= room.bathrooms %></td>
        <td><%= room.user %></td>
        <td><%= room.pets %></td>
        <td><%= room.smoking %></td>
        <td><%= room.wifi %></td>
        <td><%= room.bath %></td>
        <td><%= room.share %></td>
        <td><%= room.parties %></td>
        <td><%= link_to 'Show', room %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

